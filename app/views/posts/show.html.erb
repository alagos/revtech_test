<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Created at:</strong>
  <%= @post.created_at %>
</p>

<p>
  <strong>Comments:</strong>
  <ul>
    <% @comments.each do |comment| %>
      <li>
        <%= comment.body %>
        <%= comment.created_at %>
      </li>
    <% end %>

  </ul>
</p>

<h2>New Comment</h2>

<%= render 'comments/form', comment: @comment %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
